---
import { urlFor } from '@/lib/sanityClient';

interface Props {
  name: string;
  role: string;
  bio?: string;
  image: any;
}

const { name, role, bio, image } = Astro.props;

const imageUrl = image 
  ? urlFor(image).width(400).height(400).url() 
  : 'https://via.placeholder.com/400x400/3b82f6/ffffff?text=' + encodeURIComponent(name.charAt(0));
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
  <div class="relative h-64 overflow-hidden">
    <img
      src={imageUrl}
      alt={name}
      class="w-full h-full object-cover"
    />
  </div>
  
  <div class="p-6">
    <h3 class="text-xl font-bold text-neutral-900 mb-1">
      {name}
    </h3>
    <p class="text-primary-600 font-medium mb-3">
      {role}
    </p>
    {bio && (
      <p class="text-neutral-600 text-sm line-clamp-3">
        {bio}
      </p>
    )}
  </div>
</div>
