---
import { urlFor } from '@/lib/sanityClient';

interface Props {
  title: string;
  description: string;
  slug: any;
  image?: any;
  icon?: string;
}

const { title, description, slug, image, icon } = Astro.props;

const imageUrl = image ? urlFor(image).width(600).height(400).url() : null;
const serviceUrl = `/services/${slug.current}`;
---

<div class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden">
  {imageUrl && (
    <div class="relative h-48 overflow-hidden">
      <img
        src={imageUrl}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
      />
    </div>
  )}
  
  <div class="p-6">
    <h3 class="text-2xl font-bold text-neutral-900 mb-3 group-hover:text-primary-600 transition-colors">
      {title}
    </h3>
    <p class="text-neutral-600 mb-4 line-clamp-3">
      {description}
    </p>
    <a
      href={serviceUrl}
      class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors"
    >
      Learn More
      <svg
        class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
        fill="none"
        strokeLinecap="round"
        strokeLinejoin="round"
        strokeWidth="2"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</div>
