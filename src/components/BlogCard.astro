---
import { urlFor } from '@/lib/sanityClient';
import { formatDate } from '@/lib/utils';

interface Props {
  title: string;
  slug: any;
  excerpt: string;
  mainImage: any;
  publishedAt: string;
  author: string;
}

const { title, slug, excerpt, mainImage, publishedAt, author } = Astro.props;

const imageUrl = urlFor(mainImage).width(600).height(400).url();
const blogUrl = `/blog/${slug.current}`;
---

<article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
  <a href={blogUrl} class="block">
    <div class="relative h-48 overflow-hidden">
      <img
        src={imageUrl}
        alt={title}
        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
      />
    </div>
  </a>
  
  <div class="p-6">
    <div class="flex items-center text-sm text-neutral-500 mb-3">
      <time datetime={publishedAt}>{formatDate(publishedAt)}</time>
      <span class="mx-2">â€¢</span>
      <span>{author}</span>
    </div>
    
    <a href={blogUrl}>
      <h3 class="text-xl font-bold text-neutral-900 mb-3 hover:text-primary-600 transition-colors">
        {title}
      </h3>
    </a>
    
    <p class="text-neutral-600 mb-4 line-clamp-3">
      {excerpt}
    </p>
    
    <a
      href={blogUrl}
      class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors"
    >
      Read More
      <svg
        class="w-5 h-5 ml-2"
        fill="none"
        strokeLinecap="round"
        strokeLinejoin="round"
        strokeWidth="2"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</article>
