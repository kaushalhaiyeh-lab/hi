---
import { getSiteSettings } from '@/lib/sanityClient';
import Container from './Container.astro';
import MobileMenu from './MobileMenu';

const settings = await getSiteSettings();

const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Services', href: '/services' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
];
---

<nav class="sticky top-0 z-50 bg-white/80 backdrop-blur-md shadow-sm">
  <Container>
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <span class="text-2xl font-bold text-primary-600">
          {settings?.siteName || 'Business'}
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-neutral-700 hover:text-primary-600 font-medium transition-colors duration-200"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <MobileMenu client:load navLinks={navLinks} />
      </div>
    </div>
  </Container>
</nav>
